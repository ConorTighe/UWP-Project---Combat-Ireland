<Page xmlns:my="using:Microsoft.Toolkit.Uwp.UI.Controls" 
    x:Class="UWPCombatApp.Views.DisplayDrills"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPCombatApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <StackPanel VerticalAlignment="Top" Margin="0,18,0,0" Grid.Row="0" Background="{ThemeResource SystemControlBackgroundAccentBrush}">

            <CommandBar x:ConnectionId='12' x:Name="cmdbar" 
                IsOpen="{Binding IsChecked, ElementName=isopentoggle, Mode=TwoWay}"
                IsSticky="{Binding IsChecked, ElementName=isstickytoggle, Mode=TwoWay}"
                ClosedDisplayMode="{Binding SelectedItem.Content, ElementName=combobox}">
                <AppBarButton x:ConnectionId='13' Name="AddDrill" Icon="Add" Label="Add"                      />
                <AppBarToggleButton x:ConnectionId='14' Name="ShareInfo" Icon="Contact" Label="Share"/>
                <AppBarButton x:ConnectionId='15' Name="BackToMain" Icon="Back" Label="Back To Menu"                          />

            </CommandBar>
            <Image HorizontalAlignment="Left" Source="Assets/storeLogo-sdk.png" Stretch="None"/>
        </StackPanel >
        <StackPanel Margin="0,120,0,0">
        <TextBlock x:ConnectionId='9' Name="loadTxt" Text="Loading drills...." Visibility="Visible" HorizontalAlignment="Center"/>
        
        <my:PullToRefreshListView x:ConnectionId='10'
        x:Name="RefreshListView"
        MinWidth="200"
        Margin="24"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom"
        Background="White"
        OverscrollLimit="0.4"
        PullThreshold="100"
        IsPullToRefreshWithMouseEnabled="True">
            <my:PullToRefreshListView.ItemTemplate >
                <DataTemplate>
                    <StackPanel>
                           
                            <TextBlock AutomationProperties.Name="{Binding Name}"
                 Style="{StaticResource CaptionTextBlockStyle}"
                 Text="{Binding Name}"
                 TextWrapping="WrapWholeWords"  />
                        <TextBlock AutomationProperties.Name="{Binding Sets}"
                 Style="{StaticResource CaptionTextBlockStyle}"
                 Text="{Binding Sets}"
                 TextWrapping="WrapWholeWords"  />
                        <TextBlock AutomationProperties.Name="{Binding SetTime}"
                 Style="{StaticResource CaptionTextBlockStyle}"
                 Text="{Binding  SetTime}"
                 TextWrapping="WrapWholeWords"  />
                            <Button x:ConnectionId='11' Tag="{Binding Id}" Content="Delete"                         ></Button>
                    </StackPanel>
                </DataTemplate>
            </my:PullToRefreshListView.ItemTemplate>
            <my:PullToRefreshListView.PullToRefreshContent>
                <TextBlock FontSize="16"
               Opacity="0.5"
               Text="Pull down to refresh data" />
            </my:PullToRefreshListView.PullToRefreshContent>
        </my:PullToRefreshListView>
        </StackPanel>
        <Popup x:ConnectionId='1' x:Name="ppup" IsOpen="False" IsLightDismissEnabled="True"  
     Width="320" HorizontalAlignment="Center">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <!--<EdgeUIThemeTransition Edge="Left" />-->
                    <PaneThemeTransition Edge="Left" />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Grid Width="380" Height="{Binding ElementName=flyoutPane, Path=Height}"  Background="{ThemeResource FlyoutBackgroundThemeBrush}" >
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,10,10,10" >
                    <TextBlock x:ConnectionId='2' Name="NameText" Text="Enter Name:"/>
                    <TextBox x:ConnectionId='3'  Name="NameBox" Width="200" Height="50"/>
                    <TextBlock x:ConnectionId='4' Name="SetsText" Text="Enter Sets:"/>
                    <TextBox x:ConnectionId='5'  Name="SetsBox" Width="200" Height="50"/>
                    <TextBlock x:ConnectionId='6' Name="TimeText" Text="Enter Time to complete:"/>
                    <TextBox x:ConnectionId='7' Name="TimeBox" Width="200" Height="50"/>
                    <Button x:ConnectionId='8' Name="SubmitBtn" Height="30" Width="100" Content="Submit"                        />
                </StackPanel>
            </Grid>
        </Popup>
        
    </Grid>
</Page>

